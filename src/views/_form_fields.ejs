<div class="form-group">
  <label for="title">Title</label>
  <input
    class="form-control"
    type="text"
    placeholder="请输入一个标题"
    required
    name="title"
    id="title"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <input
    class="form-control"
    type="text"
    placeholder="请输入关键字"
    required
    name="description"
    id="description"
  />
</div>
<div class="form-group">
  <label for="markdownText">Markdown</label>
  <textarea class="form-control" name="markdown" id="markdownText" rows="12" placeholder="请输入文章内容" required></textarea
  >
</div>

<button type="submit" class="btn btn-primary btn-lg mr-4">Save</button>
<a href="/api/articles" class="btn btn-secondary btn-lg">Cancel</a>
<button type="reset" class="btn btn-link mt-2" style="display: block;">Reset</button>
